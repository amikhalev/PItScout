<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".ScoutingActivity">

    <fragment
        android:id="@+id/basic_robot_fragment"
        android:name="org.teamtators.pitscout.BasicRobotFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_basic_robot" />

    <fragment
        android:id="@+id/auto_fragment"
        android:name="org.teamtators.pitscout.AutoFragment"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_auto" />

    <fragment
        android:id="@+id/teleop_fragment"
        android:name="org.teamtators.pitscout.TeleopFragment"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_teleop" />
</LinearLayout>